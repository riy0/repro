#!/usr/bin/env sh

set -ex

docker-compose up -d

sleep 10 # XXX

docker-compose exec app wget -O- localhost:80 | grep "<li><a href='http://repro-dummy-1.localhost:8080' target='_blank'>repro(8080:80)</a></li>"
docker-compose exec app wget -O- localhost:80 | grep "<li><a href='http://repro-ruby-1.localhost:80' target='_blank'>repro(80:3000)</a></li>"

docker-compose exec app wget -O- localhost:80 --header 'Host: repro-dummy-1.localhost' | grep 'Welcome to nginx!'
docker-compose exec app wget -O- localhost:3000 --header 'Host: repro-ruby-1.localhost' | grep 'Hello World'

docker-compose exec app wget -O- lvh.me:80 | grep "<li><a href='http://repro-dummy-1.lvh.me:8080' target='_blank'>repro_dummy_1 (8080:80)</a></li>"
docker-compose exec app wget -O- lvh.me:80 | grep "<li><a href='http://repro-ruby-1.lvh.me:80' target='_blank'>repro_ruby_1 (80:3000)</a></li>"

docker-compose exec app wget -O- lvh.me:80 --header 'Host: repro-dummy-1.lvh.me' | grep 'Welcome to nginx!'
docker-compose exec app wget -O- lvh.me:3000 --header 'Host: repro-ruby-1.lvh.me' | grep 'Hello World'
